---
import background from "../assets/background.svg";
import { ClientRouter } from "astro:transitions";

const { title } = Astro.props;

const email = "maodev81@gmail.com"; 
const encodedEmail = btoa(email);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="MAO">
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<img id="background" src={background.src} alt="" fetchpriority="high" />
		<slot />
	</body>
</html>

<style>
	@font-face {
	font-family: "Alkatra";
	src: url("/fonts/alkatra/Alkatra-Regular.ttf") format("truetype");
	font-weight: 400;
	font-style: normal;
}
@font-face {
	font-family: "Alkatra";
	src: url("/fonts/alkatra/Alkatra-Bold.ttf") format("truetype");
	font-weight: 800;
	font-style: normal;
}
@font-face {
	font-family: "Alkatra";
	src: url("/fonts/alkatra/Alkatra-Medium.ttf") format("truetype");
	font-weight: medium;
	font-style: normal;
}
@font-face {
	font-family: "Alkatra";
	src: url("/fonts/alkatra/Alkatra-SemiBold.ttf") format("truetype");
	font-weight: 600;
	font-style: normal;
}

	html,
	body {
		background-color: #0b0b0a;
		margin: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden; /* Evita el scroll horizontal */
	}
	#background {
		background-color: #0b0b0a;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		filter: blur(120px);
	}
</style>

<script is:inline define:vars={{ encodedEmail }}>
 
	function decodeEmail(encoded) {
	  return atob(encoded); 
	}
  
	// Obtener el botón de contacto
	const botonContacto = document.getElementById("contacto");
  
	// Asignar evento al botón
	botonContacto?.addEventListener("click", () => {
	  const encodedEmail2 = encodedEmail; 
	  const email = decodeEmail(encodedEmail2);
	  window.location.href = `mailto:${email}`;
	});
  </script>
  